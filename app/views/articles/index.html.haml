= search_form_for @q, class: 'form-inline' do |f|
  .form-group
    = f.label :title_cont, t('.title_content_search')
    = f.search_field :title_cont, class: 'form-control'

%table.table.table-striped.table-hover
  %thead
    %tr
      %th= t '.image'
      %th= t 'articles.title'
      %th= t '.text_sample'
      %th= t '.views_count'
      %th= t '.author'
      %th= t '.created_at'
  %tbody
    = render @articles.decorate
    = paginate @articles, :theme => 'twitter-bootstrap-3'
%br/
%h2= t '.most_popular_categories'
= render Category.most_popular_categories
